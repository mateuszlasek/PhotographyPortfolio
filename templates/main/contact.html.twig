{% extends 'base.html.twig' %}

{% block title %}Kontakt{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <div class="text-center mb-10">
            <h1 class="text-4xl mb-4">Kontakt</h1>
            <p class="text-lg"><strong>Email:</strong> <a href="mailto:example@email.com">example@email.com</a></p>
            <p class="text-lg"><strong>Telefon:</strong> (+48) 123 456 789</p>
            <p class="text-lg"><strong>Instagram:</strong> <a href="instagram.com/lasek_szymon">instagram.com/lasek_szymon</a></p>
        </div>

        <div class="max-w-4xl mx-auto bg-zinc-800 p-10 rounded-xl shadow-xl">
            <h2 class="text-3xl text-center mb-6">Formularz kontaktowy</h2>
            <form action="#" method="POST">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label for="name" class="block text-gray-400 mb-2">Imię i nazwisko</label>
                        <input type="text" id="name" name="name" required
                               class="w-full p-4 bg-zinc-700 text-gray-200 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="email" class="block text-gray-400 mb-2">Adres email</label>
                        <input type="email" id="email" name="email" required
                               class="w-full p-4 bg-zinc-700 text-gray-200 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>
                <div class="mb-6">
                    <label for="message" class="block text-gray-400 mb-2">Wiadomość</label>
                    <textarea id="message" name="message" rows="6" required
                              class="w-full p-4 bg-zinc-700 text-gray-200 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit"
                            class="px-8 py-4 bg-zinc-700 text-gray-400 font-semibold rounded-lg hover:bg-zinc-900 transition duration-300">
                        Wyślij
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
