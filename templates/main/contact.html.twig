{% extends 'base.html.twig' %}

{% block title %}Kontakt{% endblock %}

{% set active = 'contact' %}

{% block body %}
    <div class="container mx-auto p-6">
        <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/2 pr-6 mb-6 md:mb-0">
                <div class="p-4 rounded-lg">
                    <div class="relative mb-4 flex justify-center">
                        <img src="{{ asset('images/nike_jordan_red_cropped.webp') }}" alt="Zdjęcie kontaktowe" class="rounded-lg" height="300" width="150">
                    </div>
                    <h2 class="text-xl font-semibold mb-2 text-center">Dane kontaktowe</h2>
                    <p class="text-center"><strong>Email:</strong> example@email.com</p>
                    <p class="text-center"><strong>Phone:</strong> (+48) 123 456 789</p>
                    <p class="text-center"><strong>Website:</strong> <a href="http://website.com" target="_blank" class="text-blue-600 hover:underline">website.com</a></p>
                    <p class="text-center"><strong>Location:</strong> 1/137 Brunswick Street, Fitzroy, Melbourne, Australia</p>
                    <p class="text-center text-sm">photographer.</p>
                </div>
            </div>

            <div class="md:w-1/2 pl-3 md:pl-0"> {# Adjust pl-3 to pl-0 for more left padding #}
                <form action="#" method="POST" class="p-6 bg-gray-100 rounded-lg">
                    <h2 class="text-2xl mb-4 text-center">Skontaktuj się ze mną</h2>
                    <div class="mb-4">
                        <label for="name" class="block text-gray-700">Imię i nazwisko</label>
                        <input type="text" id="name" name="name" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                    </div>
                    <div class="mb-4">
                        <label for="email" class="block text-gray-700">Adres email</label>
                        <input type="email" id="email" name="email" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                    </div>
                    <div class="mb-4">
                        <label for="message" class="block text-gray-700">Wiadomość</label>
                        <textarea id="message" name="message" rows="4" class="form-textarea mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"></textarea>
                    </div>
                    <div class="flex justify-center">
                        <button type="submit" class="bg-black text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Wyślij</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
