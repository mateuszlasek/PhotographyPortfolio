{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% set active = 'portfolio' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Hello I am a photographer :|</h1>

        This my portfolio :

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="grid gap-4">
                <img class="h-auto max-w-full rounded-lg" src="{{ asset('images/ostoya_fire.jpeg') }}" alt="Ostoya Black Fire Image">
            </div>
            <div class="grid gap-4">
                <img src="{{ asset('images/bombay_sapphire.jpeg') }}" alt="Bombay Sapphire Image">
            </div>
            <div class="grid gap-4">
                <img class="h-auto max-w-full rounded-lg" src="{{ asset('images/nike_jordan_red.jpeg') }}" alt="Nike Jordan Shoe Image">
            </div>
        </div>

    </div>
{% endblock %}
