{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% set active = 'portfolio' %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block body %}
  <div class="container mx-auto p-6 min-h-screen">
    <div class="flex justify-between items-start p-6">
      <div class="sticky top-1/2 transform -translate-y-1/2 w-1/3 p-6">
        <div>
          <h1 class="text-4xl mb-4">Lorem ipsum dolor sit amet, consectetur adipiscing elit</h1>
          <p class="text-lg">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat</p>
        </div>
      </div>

      <div class="flex-1 ml-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {% for photo in photos %}
            <div class="w-full">
              <img src="{{ asset('images/' ~ photo.fileName) }}" alt="{{ photo.fileName }} load error" class="w-full h-auto object-cover">
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
